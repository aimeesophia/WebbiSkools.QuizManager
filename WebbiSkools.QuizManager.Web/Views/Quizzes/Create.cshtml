@using System.Linq
@model WebbiSkools.QuizManager.Web.Models.Quiz

@{
    ViewData["Title"] = "Create Quiz";
}

<h1 class="text-center">Create Quiz</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Title" class="form-control" placeholder="Quiz Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="question">
        <div class="form-group">
            <input asp-for="Questions.First().Text" class="form-control" name="Questions[0].Text" placeholder="Question" />
            <span asp-validation-for="Questions.First().Text" class="text-danger"></span>
        </div>
    </div>
    <div class="answers">
        <div class="form-group">
            <input asp-for="Questions.First().Answers.First().Text" class="form-control" name="Questions[0].Answers[0].Text" placeholder="Answer" />
            <span asp-validation-for="Questions.First().Answers.First().Text"></span>
        </div>
        <div class="form-group">
            <input asp-for="Questions.First().Answers.First().Text" class="form-control" name="Questions[0].Answers[1].Text" placeholder="Answer" />
            <span asp-validation-for="Questions.First().Answers.First().Text"></span>
        </div>
        <div class="form-group">
            <input asp-for="Questions.First().Answers.First().Text" class="form-control" name="Questions[0].Answers[2].Text" placeholder="Answer" />
            <span asp-validation-for="Questions.First().Answers.First().Text"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>