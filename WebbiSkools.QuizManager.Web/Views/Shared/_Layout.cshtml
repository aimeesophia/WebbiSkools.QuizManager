<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebbiSkools Ltd.</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Quiz Manager</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div id="navbar-collapse" class="collapse navbar-collapse justify-content-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="text-light d-none d-md-block d-lg-block d-xl-block" data-testid="navbar-welcome-message">Hi, @User.Identity.Name!</span>
                    }
                    <form class="form-inline ml-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-light my-2 my-sm-0 text-light" asp-controller="Account" asp-action="Logout" data-testid="navbar-logout-button">Logout</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-light my-2 my-sm-0 text-light" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
